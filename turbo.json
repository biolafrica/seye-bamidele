{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "NODE_ENV", 
        "NEXT_PUBLIC_*",
        "SUPABASE_SERVICE_ROLE_KEY",
        "SMTP_HOST",
        "SMTP_PORT", 
        "SMTP_SECURE",
        "SMTP_USER",
        "SMTP_PASS",
        "SMTP_FROM",
        "SENDGRID_API_KEY",
        "SENDGRID_FROM_EMAIL",
        "ADMIN_SECRET_KEY"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^dev"],
      "env": ["NODE_ENV", "NEXT_PUBLIC_*"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"]
    },
    "test": {
      "dependsOn": ["build"],
      "cache": false,
      "inputs": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", "**/*.test.*", "**/*.spec.*"]
    },
    "clean": {
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "cache": true
    }
  }
}
