{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["NODE_ENV", "NEXT_PUBLIC_*"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^dev"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"]
    },
    "test": {
      "dependsOn": ["build"],
      "cache": false,
      "inputs": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", "**/*.test.*", "**/*.spec.*"]
    },
    "clean": {
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "cache": true
    }
  }
}
